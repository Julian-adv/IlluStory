{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "IlluStory",
    "version": "0.8.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "exists": true,
        "createDir": true,
        "scope": ["$APPCONFIG/*", "$APPDATA/", "$RESOURCE/*", "**/*"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["$APPDATA/**", "**/*"]
      },
      "http": {
        "request": true,
        "scope": ["https://api-free.deepl.com/v2/translate", "https://*.github.com/", "http://*"]
      },
      "shell": {
        "all": false,
        "execute": true,
        "scope": [
          {
            "name": "run-bat",
            "cmd": "cmd.exe",
            "args": ["/c", "resources\\server\\start_server.bat"]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.illustory",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["resources/*"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost data:; style-src 'self' 'unsafe-inline'; connect-src *"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "IlluStory",
        "width": 800
      }
    ]
  }
}
